paths=( "soomla-native/projects/cocos2dx-android-profile" )
build=../build/android

rm -rf $build
mkdir -p $build

# handle special case of build_all location for android-profile
cd submodules/android-profile/SoomlaAndroidProfile
./build_all
cd -
cp -L submodules/android-profile/build/AndroidProfile.jar $build/
cp -L submodules/android-profile/build/simple.facebook-2.1.jar $build/
cp -L submodules/android-profile/build/AndroidProfileFacebook.jar $build/
cp -L submodules/android-profile/build/AndroidProfileGoogle.jar $build/
cp -L submodules/android-profile/build/AndroidProfileTwitter.jar $build/
cp -L submodules/android-profile/build/twitter4j-asyc-4.0.2.jar $build/
cp -L submodules/android-profile/build/twitter4j-core-4.0.2.jar $build/

for path in "${paths[@]}"
do
  cd $path
  ./build_all
  cd -
  cp -RL $path/build/* $build/
done
